# Replace example.com with your actual domain
example.com {
    # Frontend
    handle / {
        reverse_proxy 192.168.69.3:3000
    }

    # Backend API
    handle /api/* {
        reverse_proxy 192.168.69.3:8000
    }

    # Enable compression
    encode gzip

    # Enable HTTPS
    tls {
        # Caddy will automatically obtain and manage certificates
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
} 